{% style %}
  :root {
    {%- for scheme in settings.color_schemes -%}
      {% if forloop.first %}
        {%- assign bg_brightness = scheme.settings.background | color_brightness -%}
        {%- if bg_brightness < 150 -%}
          color-scheme: dark;
        {%- endif -%}
        --color-background: {{ scheme.settings.background | color_to_rgb | remove: 'rgb(' | remove: ')' }};
        {% if scheme.settings.background_gradient != empty -%}
          --color-background-gradient: {{ scheme.settings.background_gradient }};
        {%- endif -%}
        --color-text: {{ scheme.settings.text | color_to_rgb | remove: 'rgb(' | remove: ')' }};
        --color-accent: {{ scheme.settings.accent | color_to_rgb | remove: 'rgb(' | remove: ')' }};
        --color-btn-bg: {{ scheme.settings.btn_background | color_to_rgb | remove: 'rgb(' | remove: ')' }};
        --color-btn-text: {{ scheme.settings.btn_text | color_to_rgb | remove: 'rgb(' | remove: ')' }};
        --color-btn-border: {{ scheme.settings.btn_border | color_to_rgb | remove: 'rgb(' | remove: ')' }};

      {%- endif %}
    {%- endfor -%}
  }
  {% for scheme in settings.color_schemes %}
    .color-{{ scheme.id }} {
        --color-background: {{ scheme.settings.background | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      {% if scheme.settings.background_gradient != empty -%}
        --color-background-gradient: {{ scheme.settings.background_gradient }};
      {%- endif -%}
      --color-text: {{ scheme.settings.text | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-accent: {{ scheme.settings.accent | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-btn-bg: {{ scheme.settings.btn_background | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-btn-text: {{ scheme.settings.btn_text | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-btn-border: {{ scheme.settings.btn_border | color_to_rgb | remove: 'rgb(' | remove: ')' }};
    }
  {% endfor %}
{% endstyle %}

