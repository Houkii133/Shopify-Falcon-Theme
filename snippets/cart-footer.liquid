<div id="cart-footer">
  {% if cart.cart_level_discount_applications.size > 0 %}
    <ul
      class="cart-discount-list list-unstyled alert"
      data-alert-type="success"
      aria-label="{{ 'cart.applied_discounts' | t }}"
    >
      {% for discount in cart.cart_level_discount_applications %}
        <li class="">
          {% render 'svg-icons', icon: 'tag', size: 14 %}
          {{ discount.title }}
          (-{{ discount.total_allocated_amount | money }})
        </li>
      {% endfor %}
    </ul>
  {%- endif -%}
  <p
    class="cart-subtotal fs-lg"
    role="status"
    aria-atomic="true"
    aria-live="polite"
  >
    <span> {{ 'cart.subtotal' | t }}: </span>
    <span>
      {% if cart.items_subtotal_price > cart.total_price %}
        <s class="price-compare">
          <span class="visually-hidden"> {{ 'cart.regular_price' | t }} &nbsp; </span>
          <span>{{ cart.items_subtotal_price | money }}</span>
        </s>
        <span class="price-sale">
          <span class="visually-hidden"> {{ 'cart.sale_price' | t }} &nbsp; </span>
          <span>{{ cart.total_price | money }}</span>
        </span>
      {% else %}
        <span class="price-regular">
          {{ cart.total_price | money }}
        </span>
      {% endif %}
    </span>
  </p>
  {% form 'cart', cart %}
    <button class="btn btn-primary btn-full btn-with-icon" name="checkout" type="submit">
      {% render 'svg-icons', icon: 'lock', size: 16, class: 'me-4' %}
      {{ 'cart.checkout' | t }}
    </button>
    {% if section.settings.dynamic_buttons and additional_checkout_buttons %}
      <div class="additional-checkout-buttons">
        {{ content_for_additional_checkout_buttons }}
      </div>
    {% endif %}
  {% endform %}
  {% if section.settings.continue_btn %}
    <button class="btn btn-link btn-sm btn-full" type="button" data-dialog-close>
      {{ 'cart.continue_shopping' | t }}
    </button>
  {% endif %}
  {% if section.settings.payment_icons %}
    <div class="payment-icons-wrapper">
      {% render 'payment-icons' %}
    </div>
  {% endif %}
</div>
