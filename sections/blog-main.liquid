<section
  id="blog-main-{{ collection.id }}"
  class="blog-main"
>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'header' %}
        <header
          class="blog-header {{ block.settings.color_scheme | prepend: 'color-' }}"
          style="
            --text-alignment: {{ block.settings.text_alignment }};
            --overlay-color: {{ block.settings.overlay_color | color_to_rgb | remove: 'rgb(' | remove: ')'  }};
            --overlay-opacity: {{ block.settings.overlay_opacity | append: '%' }};
            --overlay-blur: {{ block.settings.overlay_blur | append: 'px' }};
            --padding-top: {{ block.settings.padding_top }}rem;
            --padding-bottom: {{ block.settings.padding_bottom }}rem;
          "
          data-viewport-entered="false"
          data-img="{%- if block.settings.img == nil -%}false{%- else -%}true{%- endif -%}"
          {{ block.shopify_attributes }}
        >
          {% unless block.settings.img == null %}
            <picture>
              {% unless block.settings.img_mobile == null %}
                <source
                  media="(max-width: 1199px)"
                  srcset="{{ block.settings.img_mobile | image_url: width: 800 }}"
                  sizes="100vw"
                >
              {% endunless %}
              <img
                src="{{ block.settings.img | image_url: width: 1200 }}"
                sizes="100vw"
                alt="{{ block.settings.img.alt }}"
                width="1200"
                height="{{ 1200 | divided_by: block.settings.img.aspect_ratio | round }}"
                loading="eager"
              >
            </picture>
          {% endunless %}
          <div class="container {% if block.settings.full_width %}container-full{% endif %}">
            <div class="container-inner scroll-animate-fade-in-up">
              {% if block.settings.show_breadcrumb %}
                {% render 'breadcrumb' %}
              {% endif %}
              <h1
                id="blog-heading-{{ blog.id }}"
                class="heading {{ block.settings.heading_size }}"
              >
                {% if block.settings.heading == blank %}
                  {{ blog.title }}
                {% else -%}
                  {{ block.settings.heading }}
                {% endif %}
              </h1>
              {% unless block.settings.description == blank %}
                <div class="description rte {{ block.settings.description_size }}">
                  {{ block.settings.description }}
                </div>
              {% endunless %}
            </div>
          </div>
        </header>
      {% when 'posts' %}
        <div
          class="blog-posts {{ block.settings.color_scheme | prepend: 'color-' }}"
          style="
            --padding-top: {{ block.settings.padding_top | append: 'rem' }};
            --padding-bottom: {{ block.settings.padding_bottom | append: 'rem' }};
          "
          data-viewport-entered="false"
          {{ block.shopify_attributes }}
        >
          <div class="container {% if block.settings.full_width %}container-full{% endif %}">
            {% if block.settings.show_count and block.settings.show_tags %}
              <div class="blog-utilities scroll-animate-fade-in-up">
                {% if block.settings.show_count %}
                  <p class="blog-utilities-count">
                    {{ 'blog.count_articles' | t: count: blog.articles_count }}
                  </p>
                {% else %}
                  <div></div>
                {% endif %}
                {% if block.settings.show_tags %}
                  <button
                    class="btn btn-sm btn-with-icon btn-outline"
                    type="button"
                    data-open-dialog="blog-tags-drawer"
                    aria-controls="blog-tags-drawer"
                    aria-haspopup="dialog"
                  >
                    {% render 'svg-icons', icon: 'tag', size: 16 %}
                    {{ 'blog.tags_btn' | t }}
                  </button>
                {% endif %}
              </div>
            {% endif %}
            {% paginate blog.articles by block.settings.limit %}
              {% if blog.articles.size == 0 %}
                <div class="alert scroll-animate-fade-in-up">
                  {{ 'blog.empty_html' | t }}
                </div>
              {% else %}
                <ul
                  class="blog-posts-grid"
                  style="
                    --mobile-cols: {{ block.settings.mobile_cols }};
                    --tablet-cols: {{ block.settings.tablet_cols }};
                    --desktop-cols: {{ block.settings.desktop_cols }};
                  "

                  aria-labelledby="blog-heading-{{ blog.id }}"
                >
                  {% for article in blog.articles limit: block.settings.limit %}
                    <li
                      class="article-item scroll-animate-fade-in-up"
                      style="animation-delay: {{ forloop.index0 | times: 100 }}ms"
                    >
                      {% render 'article-card', article: article, block: block %}
                    </li>
                  {% endfor %}
                </ul>
                {% render 'pagination', paginate: paginate, infinite: false %}
              {% endif %}
            {% endpaginate %}
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</section>

<dialog
  id="blog-tags-drawer"
  class="dialog drawer drawer-right"
  aria-labelledby="blog-tags-drawer-title"
>
  <dialog-component class="dialog-inner">
    <div class="dialog-header">
      <h2 id="blog-tags-drawer-title" class="dialog-title">
        {{ 'blog.tags_title' | t }}
      </h2>
      <button
        class="dialog-close"
        data-dialog-close
        aria-label="{{ 'accessibility.close' | t }}"
      >
        {% render 'svg-icons', icon: 'x', size: 20, stroke_width: 1.5 %}
      </button>
    </div>
    <div class="dialog-body">
      <ul class="blog-tags-drawer-list">
        {% for tag in blog.all_tags %}
          <li>
            <a
              href="{{ blog.url }}/tagged/{{ tag | handleize }}"
              class="{% if current_tags contains tag %}active{% endif %}"
              aria-current="{% if current_tags contains tag %}true{% else %}false{% endif %}"
            >
              {% render 'svg-icons', icon: 'tag', size: 16, class: 'me-3' %}
              {{ tag | capitalize }}
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
    <div class="dialog-footer">
      <a
        href="{{ blog.url }}"
        class="btn btn-outline btn-sm btn-full"
      >
        {{ 'blog.tags_show_all' | t }}
      </a>
    </div>
  </dialog-component>
</dialog>

