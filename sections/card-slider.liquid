{% if section.index <= 3 or request.design_mode %}
  <link href="{{ 'card-slider.css' | asset_url }}" rel="stylesheet" fetchpriority="high">
{% endif %}

<div
  id="card-slider-{{ section.id }}" 
  class="card-slider {{ section.settings.color_scheme | prepend: 'color-' }} "
  style="
    --padding-top: {{ section.settings.padding_top | append: 'rem' }};
    --padding-bottom: {{ section.settings.padding_bottom | append: 'rem' }};
  "
  data-viewport-entered="false"
  data-section-css="{{- 'card-slider.css' | asset_url -}}"
>
  <div class="container {% if section.settings.full_width %}container-full{% endif %}">
    {% unless section.settings.heading == blank %}
      <header class="section-header scroll-animate-fade-in-up text-{{ section.settings.header_alignment }}">
        {% unless section.settings.heading == blank %}
          <h2
            id="heading-{{ section.id }}"
            class="heading {{ section.settings.heading_size }}"
          >
            {{ section.settings.heading }}
          </h2>
        {% endunless %}
        {% unless section.settings.description == blank %}
          <div class="description rte {{ section.settings.description_font_size }}">
            {{ section.settings.description }}
          </div>
        {% endunless %}
      </header>
    {% endunless %}
    <carousel-component
      class="carousel"
      style="
        --mobile-cols: {{ section.settings.carousel_mobile_cols }};
        --desktop-cols: {{ section.settings.carousel_desktop_cols }};
      "
      data-mobile-cols="{{ section.settings.carousel_mobile_cols }}"
      data-desktop-cols="{{ section.settings.carousel_desktop_cols }}"
      data-mobile-stack="{{ section.settings.carousel_mobile_stack }}"
      data-desktop-stack="{{ section.settings.carousel_desktop_stack }}"
      data-controls-style="{{ section.settings.carousel_controls_style }}"
      data-controls-mobile="{{ section.settings.show_controls_on_mobile }}"
    >
      <div class="carousel-inner">
        <button
          class="carousel-control"
          name="previous"
          type="button"
          aria-label="{{ 'accessibility.previous_slide' | t }}"
        >
          {% render 'svg-icons', icon: 'chevron-left', stroke_width: 1.5, size: 22 %}
        </button>
        <ul
          class="carousel-track"
          aria-labelledby="heading-{{ section.id }}"
          aria-roledescription="{{ 'accessibility.carousel' | t | downcase }}"
        >
          {% for block in section.blocks %}
            {% liquid
              case section.settings.item_img_ratio
                when 'adapt'
                  assign img_width = 600
                  assign img_height = 600 | divided_by: block.settings.img.aspect_ratio | round
                when '1x1'
                  assign img_width = 600
                  assign img_height = 600
                when '4x3'
                  assign img_width = 600
                  assign img_height = 600 | times: 3 | divided_by: 4 | round
                when '16x9'
                  assign img_width = 600
                  assign img_height = 600 | times: 9 | divided_by: 16 | round
                when '3x4'
                  assign img_width = 600 | times: 3 | divided_by: 4 | round
                  assign img_height = 600
                when '9x16'
                  assign img_width = 600 | times: 9 | divided_by: 16 | round
                  assign img_height = 600
              endcase
            %}
            <li
              class="carousel-slide card-slider-item scroll-animate-fade-in-up"
              style="animation-delay: {{ forloop.index0 | times: 0.1 }}s"
              {{ block.shopify_attributes }}
            >
              <div 
                class="card {{ section.settings.item_color_scheme | prepend: 'color-' }}"
                style="
                  --text-align: {{ section.settings.item_text_align }};
                "
                data-border="{{ section.settings.item_border }}"
                data-shadow="{{ section.settings.item_shadow }}"
                data-align="{{ section.settings.item_text_align }}"
              >
                {% unless block.settings.img == blank %}
                  <div class="img-wrapper">
                    <img
                      src="{{ block.settings.img | image_url: width: img_width, height: img_height, crop: 'center' }}"
                      alt="{{ block.settings.img.alt | escape }}"
                      class="card-img"
                      width="{{ img_width }}"
                      height="{{ img_height }}"
                      loading="lazy">
                  </div>
                {% endunless %}
                {% if block.settings.heading != blank or block.settings.descripton != blank %}
                  <div class="card-body">
                    {% unless block.settings.heading == blank %}
                      <h3 class="heading {{ section.settings.item_heading_size }}">
                        {{ block.settings.heading }}
                      </h3>
                    {% endunless %}
                    {% unless block.settings.description == blank %}
                      <div class="description rte {{ section.settings.item_description_font_size }}">
                        {{ block.settings.description }}
                      </div>
                    {% endunless %}
                    {% unless block.settings.btn_text == blank %}
                      <a 
                        href="{{ block.settings.btn_url }}"
                        class="btn btn-sm btn-full {{ section.settings.item_btn_style }}">
                        {{ block.settings.btn_text }}
                      </a>
                    {% endunless %}
                  </div>
                {% endif %}
              </div>
            </li>
          {% endfor %}
        </ul>
        <button
          class="carousel-control"
          name="next"
          type="button"
          aria-label="{{ 'accessibility.next_slide' | t }}"
        >
          {% render 'svg-icons', icon: 'chevron-right', stroke_width: 1.5, size: 22 %}
        </button>
      </div>
      {% if section.settings.show_pagination %}
        <div
          class="carousel-pagination"
          aria-live="polite"
          aria-atomic="true"
          aria-label="{{ 'accessibility.pagination' | t }}"
        >
          <span>-</span>
        </div>
      {% endif %}
    </carousel-component>
  </div>
</div>

