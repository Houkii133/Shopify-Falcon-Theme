<div
  id="header"
  class="{{ section.settings.color_scheme | prepend: 'color-' }}"
  data-border="{{ section.settings.border }}"
  data-shadow="{{ section.settings.shadow }}"
  data-sticky-header="{{ section.settings.sticky_header }}"
>
  {% for block in section.blocks %}
    {% if block.type == 'mobile' %}
      <div
        id="header-mobile"
        style="
          --icons-spacing: {{ block.settings.icons_spacing | default: 0.6 }}rem;
          --padding-top: {{ block.settings.padding_top | append: 'rem' }};
          --padding-bottom: {{ block.settings.padding_bottom | append: 'rem' }};
        "
        {{ block.shopify_attributes }}
      >
        <div class="container">
          <div id="header-mobile-inner">
            <ul class="header-mobile-icons">
              {% render 'header-icon', icon: 'menu', block: block %}
              {% render 'header-icon', icon: block.settings.icons_left_icon, block: block %}
            </ul>
            <div id="header-mobile-logo">
              {% render 'header-logo', height: block.settings.logo_height %}
            </div>
            <ul class="header-mobile-icons">
              {% render 'header-icon', icon: block.settings.icons_right_icon, block: block %}
              {% render 'header-icon', icon: 'cart', block: block %}
            </ul>
          </div>
        </div>
      </div>
      {% render 'header-mobile-menu', block: block %}
    {% else %}
      <div
        id="header-desktop"
        style="
          --font-size: {{ block.settings.font_size | divided_by: 100.0 | append: 'rem' }};
          --text-transform: {{ block.settings.text_transform }};
          --letter-spacing: {{ block.settings.letter_spacing | divided_by: 100.0 | append: 'rem' }};
          --icons-spacing: {{ block.settings.icons_spacing | default: 0.6 }}rem;
          --padding-top: {{ block.settings.padding_top | append: 'rem' }};
          --padding-bottom: {{ block.settings.padding_bottom | append: 'rem' }};
        "
        data-logo-position="{{ block.settings.logo_position }}"
        {{ block.shopify_attributes }}
      >
        <div class="container {% if section.settings.full_width %}container-full{% endif %}">
          <div id="header-desktop-inner">
            <div id="header-desktop-logo">
              {% render 'header-logo', height: block.settings.logo_height %}
            </div>
            <div id="header-desktop-menu">
              {% render 'header-desktop-menu', block: block %}
            </div>
            <ul id="header-desktop-icons">
              {% render 'header-icon', icon: 'localization', block: block %}
              {% render 'header-icon', icon: 'account', block: block %}
              {% render 'header-icon', icon: 'search', block: block %}
              {% render 'header-icon', icon: 'wishlist', block: block %}
              {% render 'header-icon', icon: 'cart', block: block %}
            </ul>
          </div>
        </div>
      </div>
    {% endif %}
  {% endfor %}
</div>

