<div
  id="footer"
  class="{{ section.settings.color_scheme | prepend: 'color-' }}"
  style="
    --border-top-opacity: {{ section.settings.border_top_opacity | append: '%' }};
    --padding: {{ section.settings.padding | append: 'rem' }};
  "
  data-linear-gradient="{{ section.settings.linear_gradient }}"
  data-fixed-desktop="{{ section.settings.fixed_footer_desktop }}"
  data-collapsible-blocks-mobile="{{ section.settings.collapsible_blocks_mobile }}"
  data-section-css="
    {%- if section.settings.enable_newsletter -%}
      {{- 'newsletter.css' | asset_url -}}
    {%- endif -%}
  "
>
  <div class="container {% if section.settings.full_width %}container-full{% endif %}">
    {% if section.settings.enable_newsletter %}
      <div
        id="footer-newsletter"
        class="scroll-animate-fade-in-up"
        data-viewport-entered="false"
      >
        <div class="section-header text-center">
          {% unless section.settings.newsletter_heading == blank %}
            <h3 class="heading {{ section.settings.newsletter_heading_size }}">
              {{ section.settings.newsletter_heading }}
            </h3>
          {% endunless %}
          {% unless section.settings.newsletter_description == blank %}
            <div class="description rte {{ section.settings.newsletter_description_font_size }}">
              {{ section.settings.newsletter_description }}
            </div>
          {% endunless %}
        </div>
        {% render 'newsletter-form' %}
        {% unless section.settings.notice == blank %}
          <div class="newsletter-notice rte fs-xs text-center">
            {{ section.settings.notice }}
          </div>
        {% endunless %}
      </div>
      <hr class="footer-separator">
    {% endif %}
    {% if section.blocks.size > 0 %}
      <div
        id="footer-blocks"
        data-viewport-entered="false"
      >
        {% for block in section.blocks %}
          <div
            class="footer-block scroll-animate-fade-in-up"
            style="animation-delay: {{ forloop.index0 | times: 0.1 }}s"
            data-type="{{ block.type }}"
          >
            {% case block.type %}
              {% when 'about' %}
                {% render 'footer-block', block: block %}
              {% when 'richtext' %}
                {% if section.settings.collapsible_blocks_mobile %}
                  <collapse-component>
                    <details>
                      <summary>
                        <span>{{ block.settings.title }}</span>
                        {% render 'svg-icons', icon: 'chevron-down', size: 16, stroke_width: 1.5 %}
                      </summary>
                      <div class="collapse-content">
                        <div class="collapse-content-inner">
                          {% render 'footer-block', block: block %}
                        </div>
                      </div>
                    </details>
                  </collapse-component>
                {% endif %}
                <div class="footer-block-inner">
                  <h3 class="heading h5">
                    {{ block.settings.title }}
                  </h3>
                  {% render 'footer-block', block: block %}
                </div>
              {% when 'menu' %}
                {% if section.settings.collapsible_blocks_mobile %}
                  <collapse-component>
                    <details>
                      <summary>
                        <span>{{ block.settings.title }}</span>
                        {% render 'svg-icons', icon: 'chevron-down', size: 16, stroke_width: 1.5 %}
                      </summary>
                      <div class="collapse-content">
                        <div class="collapse-content-inner">
                          {% render 'footer-block', block: block %}
                        </div>
                      </div>
                    </details>
                  </collapse-component>
                {% endif %}
                <div class="footer-block-inner">
                  <h3 class="heading h5">
                    {{ block.settings.title }}
                  </h3>
                  {% render 'footer-block', block: block %}
                </div>
            {% endcase %}
          </div>
        {% endfor %}
      </div>
      <hr class="footer-separator">
    {% endif %}
    <div
      id="footer-bottom"
      class="scroll-animate-fade-in-up"
      data-viewport-entered="false"
      data-viewport-small="true"
    >
      <div id="footer-copyright" class="fs-sm">
        <p>
          &copy; {{ 'now' | date: '%Y' }}
          {{ shop.name | replace: ' (', '<span hidden>' | replace: ')', '</span>' }}. {{ 'general.all_rights_reserved' | t }}.
        </p>
        {% if section.settings.policy_links %}
          <ul
            id="footer-policy-links"
            aria-label="{{ 'accessibility.policy_links' | t }}"
          >
            {% for policy in shop.policies %}
              <li>
                <a href="{{ policy.url }}">
                  {{ policy.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
        {% if section.settings.powered_by %}
          <p id="footer-copyright-powered"><span>Theme by </span> <a href="https://www.kondasoft.com" target="_blank" rel="sponsored">KondaSoft</a>. <span>Powered by </span><a href="https://www.shopify.com" target="_blank" rel="sponsored">Shopify</a>.</p>
        {% endif %}
      </div>
      {% if section.settings.payment_icons %}
        <div id="footer-payment-icons">
          {% render 'payment-icons' %}
        </div>
      {% endif %}
      {% if section.settings.scroll_top %}
        <div id="footer-scroll-top">
          <button
            class="btn btn-outline btn-sm"
            onclick="document.documentElement.scrollTo({ top: 0, behavior: 'smooth'});"
            tabindex="-1"
            aria-hidden="true"
          >
            {% render 'svg-icons', icon: 'arrow-top', size: 16, stroke_width: 1 %}
            {{ 'general.scroll_top' | t }}
          </button>
        </div>
      {% endif %}
    </div>
  </div>
</div>

