{% endcomment %}

{% if section.index <= 3 or request.design_mode %}
  <link href="{{ 'faq.css' | asset_url }}" rel="stylesheet" fetchpriority="high">
{% endif %}

<div
  id="faq-{{ section.id }}"
  class="faq {{ section.settings.color_scheme | prepend: 'color-' }} "
  style="
    --collapse-title-font-size: {{ section.settings.collapse_title_font_size | divided_by: 100.0 | append: 'rem' }};
    --collapse-title-text-transform: {{ section.settings.collapse_title_text_transform }};
    --collapse-title-letter-spacing: {{ section.settings.collapse_title_letter_spacing | divided_by: 100.0 | append: 'rem' }};
    --padding-top: {{ section.settings.padding_top | append: 'rem' }};
    --padding-bottom: {{ section.settings.padding_bottom | append: 'rem' }};
  "
  data-section-css="{{ 'faq.css' | asset_url }}"
  data-viewport-entered="false"
>
  <div class="container {% if section.settings.container_narrow %}container-narrow{% endif %}">
    {% unless section.settings.heading == blank %}
      <header class="section-header scroll-animate-fade-in-up text-{{ section.settings.header_alignment }}">
        {% unless section.settings.heading == blank %}
          <h2
            id="heading-{{ section.id }}"
            class="heading {{ section.settings.heading_size }}"
          >
            {{ section.settings.heading }}
          </h2>
        {% endunless %}
        {% unless section.settings.description == blank %}
          <div class="description rte {{ section.settings.description_font_size }}">
            {{ section.settings.description }}
          </div>
        {% endunless %}
      </header>
    {% endunless %}
    {% for block in section.blocks %}
      <collapse-component
        class="scroll-animate-fade-in-up"
        style="animation-delay: {{ forloop.index0 | times: 0.1 }}s"
      >
        <details
          {% if section.settings.open_first and forloop.first %}
            open
          {% endif %}
        >
          <summary>
            {{ block.settings.title -}}
            {% render 'svg-icons', icon: 'chevron-down', size: 16, stroke_width: 1.5 %}
          </summary>
          <div class="collapse-content">
            <div class="collapse-content-inner description rte">
              {{ block.settings.description }}
              {% unless block.settings.page == null %}
                {{ block.settings.page.content }}
              {% endunless %}
            </div>
          </div>
        </details>
      </collapse-component>
    {% endfor %}
  </div>
</div>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
    {% for block in section.blocks %}
      {
        "@type": "Question",
        "name": {{ block.settings.title | json }},
        "acceptedAnswer": {
          "@type": "Answer",
          "text": {{ block.settings.description | json }}
        }
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
    ]
  }
</script>

{% schema %}
{
  "name": "FAQs",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "container_narrow",
      "label": "Narrow container",
      "default": true
    },
    {
      "type": "header",
      "content": "Header"
    },
    {
      "type": "text_alignment",
      "id": "header_alignment",
      "label": "Alignment",
      "default": "left"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "FAQs"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h2",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ]
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description (optional)",
      "default": "<p>Here are some of the most frequently asked questions we receive from our customers.</p>"
    },
    {
      "type": "select",
      "id": "description_font_size",
      "label": "Description font-size",
      "default": "fs-md",
      "options": [
        { "value": "fs-sm", "label": "sm" },
        { "value": "fs-md", "label": "md" },
        { "value": "fs-lg", "label": "lg" },
        { "value": "fs-xl", "label": "xl" }
      ]
    },
    {
      "type": "header",
      "content": "Collapse"
    },
    {
      "type": "checkbox",
      "id": "open_first",
      "label": "Open first by default",
      "default": false
    },
    {
      "type": "range",
      "id": "collapse_title_font_size",
      "label": "Title font-size",
      "min": 75,
      "max": 125,
      "step": 5,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "select",
      "id": "collapse_title_text_transform",
      "label": "Title text-transform",
      "default": "capitalize",
      "options": [
        { "value": "none", "label": "None" },
        { "value": "capitalize", "label": "Capitalize" },
        { "value": "lowercase", "label": "Lowercase" },
        { "value": "uppercase", "label": "Uppercase" }
      ]
    },
    {
      "type": "range",
      "id": "collapse_title_letter_spacing",
      "label": "Title letter-spacing",
      "min": 0,
      "max": 10,
      "step": 1,
      "default": 0
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "default": 2,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "default": 2,
      "unit": "rem"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Question title"
        },
        {
          "type": "richtext",
          "id": "description",
          "label": "Description",
          "default": "<p>Question description</p>"
        },
        {
          "type": "page",
          "id": "page",
          "label": "Page (optional)",
          "info": "Select a page to show its content in the collapse"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "presets": [
    {
      "name": "FAQs",
      "category": "Content",
      "blocks": [
        {
          "type": "item",
          "settings": {
            "title": "Where do you ship?",
            "description": "<p>We ship all around the world... Please provide here you own shipping information, including times, prices, options etc.</p>"
          }
        },
