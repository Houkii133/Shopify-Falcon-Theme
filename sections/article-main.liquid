{% liquid
  if article.image
    case section.settings.img_ratio
      when 'adapt'
        assign img_width = 1600
        assign img_height = 1600 | divided_by: article.image.aspect_ratio | round
      when 'square'
        assign img_width = 1600
        assign img_height = 1600
      when '4x3'
        assign img_width = 1600
        assign img_height = 1600 | times: 3 | divided_by: 4 | round
      when '16x9'
        assign img_width = 1600
        assign img_height = 1600 | times: 9 | divided_by: 16 | round
    endcase
  endif
%}

<article
  id="article-main-{{ article.id }}"
  class="article-main {{ section.settings.color_scheme | prepend: 'color-' }}"
  style="
    --padding-top: {{ section.settings.padding_top }}rem;
    --padding-bottom: {{ section.settings.padding_bottom }}rem;
  "
  data-has-img="{% if section.settings.show_img and article.image != null %}true{% else %}false{% endif %}"
>
  {% if section.settings.show_img and article.image != null %}
    <div class="container">
      <div class="img-wrapper animate-fade-in">
        <img
          src="{{ article.image | image_url: width: img_width, height: img_height, crop: 'center' }}"
          alt="{{ article.image.alt | escape }}"
          class="img-fluid"
          width="{{ img_width }}"
          height="{{ img_height }}"
          loading="lazy"
        >
      </div>
    </div>
  {% endif %}
  <div class="article-content">
    <div class="container container-narrow">
      <h1 class="heading {{ section.settings.heading_size }}">
        {{ article.title }}
      </h1>
      {% if section.settings.article_meta %}
        <p class="article-meta">{{ article.author }} - {{ article.created_at | time_tag: '%b %d, %Y' }}</p>
      {% endif %}
      <div class="article-content description rte">
        {{ article.content }}
      </div>
      <div class="article-footer">
        {% if section.settings.show_tags and article.tags.size > 0 %}
          <div class="article-tags fs-sm">
            {{ 'blog.posted_in' | t }}:
            {% for tag in article.tags %}
              <a class="link" href="{{ blog.url }}/tagged/{{ tag | handle }}"> {{ tag }}</a>
              {%- unless forloop.last %}, {% endunless %}
            {% endfor %}
          </div>
        {% endif %}
        {% if section.settings.share %}
          <div class="share-btn-wrapper">
            {% render 'share-button', btn_color: 'btn-outline-primary' %}
          </div>
        {% endif %}
      </div>
      {% if section.settings.breadcrumb %}
        {% render 'breadcrumb' %}
      {% endif %}
    </div>
  </div>
</article>

{% schema %}
{
  "name": "Article",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "checkbox",
      "id": "show_img",
      "label": "Show article image",
      "default": true
    },
    {
      "type": "select",
      "id": "img_ratio",
      "label": "Image ratio",
      "default": "4x3",
      "options": [
        { "group": "Adapt", "value": "adapt", "label": "Adapt" },
        { "group": "Square", "value": "square", "label": "Square" },
        { "group": "Horizontal", "value": "4x3", "label": "4x3" },
        { "group": "Horizontal", "value": "16x9", "label": "16x9" }
      ]
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "checkbox",
      "id": "breadcrumb",
      "label": "Show breadcrumb",
      "default": true
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Heading size",
      "default": "h1",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ]
    },
    {
      "type": "checkbox",
      "id": "article_meta",
      "label": "Show article meta",
      "info": "Author and date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "share",
      "label": "Show share button",
      "default": true
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "default": 2,
      "unit": "rem"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom",
      "min": 0,
      "max": 5,
      "step": 0.2,
      "default": 2,
      "unit": "rem"
    }
  ],
  "enabled_on": {
    "templates": ["article"]
  },
  "presets": [
    {
      "name": "Article main",
      "category": "Blog",
    }
  ]
}
{% endschema %}
