<div
  id="product-{{ product.id }}"
  class="product {{ section.settings.color_scheme | prepend: 'color-' }}"
  style="
    --padding-top: {{ section.settings.padding_top }}rem;
    --padding-bottom: {{ section.settings.padding_bottom }}rem;
  "
>
  <div class="container">
    <div class="product-inner">
      {% render 'product-media-gallery' %}
      <div
        id="product-content-{{ product.id }}"
        class="product-content"
      >
        <product-form class="product-form">
          {% form 'product', product, data-product-url: product.url %}
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            {% liquid
              for block in section.blocks
                case block.type
                  when 'title'
                    render 'product-block-title', block: block
                  when 'price'
                    render 'product-block-price', block: block
                  when 'rating_badge'
                    render 'product-block-rating-badge', block: block
                  when 'breadcrumb'
                    render 'product-block-breadcrumb', block: block
                  when 'richtext'
                    render 'product-block-richtext', block: block
                  when 'options'
                    render 'product-block-options', block: block
                  when 'buy_buttons'
                    render 'product-block-buy-buttons', block: block
                  when 'collapse'
                    render 'product-block-collapse', block: block
                  when 'inventory_bar'
                    render 'product-block-inventory-bar', block: block
                  when 'qty_breaks'
                    render 'product-block-qty-breaks', block: block
                  when 'personalization_field'
                    render 'product-block-personalization-field', block: block
                  when 'upsell_checkbox'
                    render 'product-block-upsell-checkbox', block: block
                  when 'local_delivery'
                    render 'product-block-local-delivery', block: block
                  when 'delivery_info'
                    render 'product-block-delivery-info', block: block
                  when 'separator'
                    render 'product-block-separator', block: block
                  when 'trust_icons'
                    render 'product-block-trust-icons', block: block
                  when 'prev_next'
                    render 'product-block-prev-next', block: block
                  when 'countdown'
                    render 'product-block-countdown', block: block
                  when 'liquid'
                    render 'product-block-liquid', block: block
                  when '@app'
                    render block
                endcase
              endfor
            %}
          {% endform %}
        </product-form>
      </div>
    </div>
  </div>
</div>

