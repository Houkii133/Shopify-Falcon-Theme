{% if section.index <= 3 or request.design_mode %}
  <link href="{{ 'collection-list.css' | asset_url }}" rel="stylesheet" fetchpriority="high">
{% endif %}

<div
  id="collection-list-{{ section.id }}" 
  class="collection-list {{ section.settings.color_scheme | prepend: 'color-' }}"
  style="
    --padding-top: {{ section.settings.padding_top | append: 'rem' }};
    --padding-bottom: {{ section.settings.padding_bottom | append: 'rem' }};
  "
  data-viewport-entered="false"
  data-section-css="{{- 'collection-list.css' | asset_url -}}"
>
  <div class="container {% if section.settings.full_width %}container-full{% endif %}">
    {% unless section.settings.heading == blank %}
      <header
        class="section-header scroll-animate-fade-in-up text-{{ section.settings.header_alignment }}"
        data-has-view-all="{% if section.settings.view_all_link != blank %}true{% else %}false{% endif %}"
      >
        <div class="section-header-inner">
          {% unless section.settings.heading == blank %}
            <h2
              id="heading-{{ section.id }}"
              class="heading {{ section.settings.heading_size }}"
            >
              {{ section.settings.heading }}
            </h2>
          {% endunless %}
          {% unless section.settings.description == blank %}
            <div class="description rte {{ section.settings.description_font_size }}">
              {{ section.settings.description }}
            </div>
          {% endunless %}
        </div>
        {% if section.settings.view_all_link != blank %}
          <div class="featured-collection-view-all">
            <a
              href="{{ routes.collections_url }}"
              class="fs-md link"
            >
              {{ section.settings.view_all_link }}
            </a>
          </div>
        {% endif %}
      </header>
    {% endunless %}
    <carousel-component
      class="carousel"
      style="
        --mobile-cols: {{ section.settings.carousel_mobile_cols }};
        --desktop-cols: {{ section.settings.carousel_desktop_cols }};
      "
      data-mobile-cols="{{ section.settings.carousel_mobile_cols }}"
      data-desktop-cols="{{ section.settings.carousel_desktop_cols }}"
      data-mobile-stack="{{ section.settings.carousel_mobile_stack }}"
      data-desktop-stack="{{ section.settings.carousel_desktop_stack }}"
      data-controls-style="{{ section.settings.carousel_controls_style }}"
      data-controls-mobile="{{ section.settings.show_controls_on_mobile }}"
    >
      <div class="carousel-inner">
        <button
          class="carousel-control"
          name="previous"
          type="button"
          aria-label="{{ 'accessibility.previous_slide' | t }}"
        >
          {% render 'svg-icons', icon: 'chevron-left', stroke_width: 1.5, size: 22 %}
        </button>
        <ul
          class="carousel-track"
          aria-labelledby="heading-{{ section.id }}"
          aria-roledescription="{{ 'accessibility.carousel' | t | downcase }}"
        >
          {% for block in section.blocks %}
            {% assign collection = block.settings.collection %}
            <li
              class="carousel-slide collection-item scroll-animate-fade-in-up"
              style="animation-delay: {{ forloop.index0 | times: 0.1 }}s"
              {{ block.shopify_attributes }}
            >
              {% render 'collection-card', collection: collection, block: block, index: forloop.index %}
            </li>
          {% else %}
            {% for index in (1..6) %}
              <li
                class="carousel-slide collection-item scroll-animate-fade-in-up"
                style="animation-delay: {{ forloop.index0 | times: 0.1 }}s"
              >
                {% render 'collection-card', index: forloop.index %}
              </li>
            {% endfor %}
          {% endfor %}
        </ul>
        <button
          class="carousel-control"
          name="next"
          type="button"
          aria-label="{{ 'accessibility.next_slide' | t }}"
        >
          {% render 'svg-icons', icon: 'chevron-right', stroke_width: 1.5, size: 22 %}
        </button>
      </div>
      {% if section.settings.show_pagination %}
        <div
          class="carousel-pagination"
          aria-live="polite"
          aria-atomic="true"
          aria-label="{{ 'accessibility.pagination' | t }}"
        >
          <span>-</span>
        </div>
      {% endif %}
    </carousel-component>
  </div>
</div>

