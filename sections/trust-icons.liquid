{% if section.index <= 3 or request.design_mode %}
  <link href="{{ 'trust-icons.css' | asset_url }}" rel="stylesheet" fetchpriority="high">
{% endif %}

<div
  id="trust-icons-{{ section.id }}" 
  class="trust-icons {{ section.settings.color_scheme | prepend: 'color-' }}"
  style="
    --padding-top: {{ section.settings.padding_top | append: 'rem' }};
    --padding-bottom: {{ section.settings.padding_bottom | append: 'rem' }};
  "
  data-viewport-entered="false"
  data-section-css="{{- 'trust-icons.css' | asset_url -}}"
>
  <div class="container {% if section.settings.full_width %}container-full{% endif %}">
    {% unless section.settings.heading == blank %}
      <header class="section-header scroll-animate-fade-in-up text-{{ section.settings.header_alignment }}">
        {% unless section.settings.heading == blank %}
          <h2
            id="heading-{{ section.id }}"
            class="heading {{ section.settings.heading_size }}"
          >
            {{ section.settings.heading }}
          </h2>
        {% endunless %}
        {% unless section.settings.description == blank %}
          <div class="description rte {{ section.settings.description_font_size }}">
            {{ section.settings.description }}
          </div>
        {% endunless %}
      </header>
    {% endunless %}
    <ul class="trust-icons-list">
      {% for block in section.blocks %}
        <li 
          class="trust-icons-item scroll-animate-fade-in-up" 
           style="animation-delay: {{ forloop.index0 | times: 0.1 }}s"
          {{ block.shopify_attributes }}>
          <div 
            class="trust-icons-card {{ section.settings.item_color_scheme | prepend: 'color-' }}"
            style="
              --text-align: {{ section.settings.item_text_align }};
            "
            data-border="{{ section.settings.item_border }}"
            data-shadow="{{ section.settings.item_shadow }}"
          >
            {% unless block.settings.img == blank %}
              <div class="img-wrapper">
                {% assign img_height_scaled = section.settings.item_img_height | times: 2 %}
                <img
                  src="{{ block.settings.img | image_url: height: img_height_scaled }}"
                  class="img-fluid"
                  alt="{{ block.settings.img.alt }}"
                  width="{{ section.settings.item_img_height | times: block.settings.img.aspect_ratio | round }}"
                  height="{{ section.settings.item_img_height }}"
                  loading="lazy">
              </div>
            {% endunless %}
            <div class="trust-icons-card-inner">
              {% unless block.settings.heading == blank %}
                <h3 class="heading {{ section.settings.item_heading_size }}">
                  {{ block.settings.heading }}
                </h3>
              {% endunless %}
              {% unless block.settings.description == blank %}
                <div class="description rte {{ section.settings.item_description_font_size }}">
                  {{ block.settings.description }}
                </div>
              {% endunless %}
            </div>
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

